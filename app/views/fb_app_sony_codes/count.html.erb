<%= render :partial => "layouts/facebook_javascript_sdk_share" %>
<%= javascript_include_tag "jquery.countdown" %>
<%= javascript_include_tag "jquery.countdown-es" %>
<script type="text/javascript">
	$(function() {
		var austDay = new Date();
    var fecha = new Date();
    var nextday = fecha.getDate() + 1; // dia
    //fecha.getMonth(); // mes
    //fecha.getFullYear(); 
    austDay = new Date(fecha.getFullYear(), 08 -1,nextday, 09, 00, 0);
		$.countdown.setDefaults($.countdown.regional['es']);
		$('.dacounter').countdown({
			until : austDay
		});
		$('#year').text(austDay.getFullYear());
	});
</script>
<div id="wrapper" class="counter">
	<div id="top_bar"><img src="/assets/fb_app_sony_codes/top_bar.jpg" alt="Playstation - Vive en estado play" /></div>
  <div class="counter_content">
