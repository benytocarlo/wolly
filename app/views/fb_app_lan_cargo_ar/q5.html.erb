<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
<script>
$(function(){
  $(".answers span").click( function(){
      $(".answers span").removeClass("ON");
      $(this).addClass("ON");
      var verifica = $(this).attr('rel');
      $("#respuesta").val( verifica );
      clearInterval(countdown);
      if(verifica=="5:c"){
        $(".box_alert").addClass("right");
        $("#shadowlight").fadeIn(function(){
         $("#registro").delay(3000).submit();
        }); 

      }else{
        $(".box_alert").addClass("wrong");
        $("#shadowlight").fadeIn(function(){
         $("#registro").delay(3000).submit();
        }); 
      }
    });
 

    $("#btn_enviar").click(function(){
        if( $("#respuesta").val() != "" ){
            clearInterval(countdown);
            $("#registro").submit();
        }else{
            $(".alerta_vacio").fadeIn(function(){
                $(this).delay(3000).fadeOut();
            }); 
        }
    });

     var countdown = setInterval(function() {
        var timeCounter = $("span[class=tiempo_numero]").html();
        var updateTime = eval(timeCounter)- eval(1);
        $("span[class=tiempo_numero]").html(updateTime);

        if(updateTime == 0){
           if($("#respuesta").val() != ""){
             $("span[class=tiempo_numero]").html("--");
             $("#registro").submit();
           }else{
            $("span[class=tiempo_numero]").html("--");
            location.href = '<%= fb_app_lan_cargo_volver_jugar_path %>';
          }
        }
    }, 1000);
})
</script>
<div class="content">
    <div id="header">
        <div class="main_nav">
            <span class="main_logo"></span>
            <ul>
                <li><a href="<%= fb_app_lan_cargo_ar_path %>" class="img_quiz">Quiz Imposible</a></li>
                <li><a href="<%= fb_app_lan_cargo_ar_premios_path %>" target="_blank" class="img_premios">Premios</a></li>
                <li><a href="/documents/fb_app_lan_cargo_ar.pdf" target="_blank" class="img_bases">Bases</a></li>
            </ul>
        </div>
        <div class="game_nav">
            <div class="pager">5/5</div>
            <div class="question"><%=image_tag("fb_app_lan_cargo_ar/question_7.png")%></div>
            <div class="tiempo">Tiempo<span class="tiempo_numero">20</span></div>
        </div>
    </div>
    
    <div class="content">
      <div class="q5 pregunta">
        <div class="answers">
          <span class="opt1" rel="5:c"></span>
          <span class="opt2" rel="5:i"></span>
          <span class="opt3" rel="5:i"></span>
          <span class="opt4" rel="5:i"></span>
          <%= form_tag(fb_app_lan_cargo_ar_respuestas_path,:id=>:registro, :method => "post") do  %>
              <%= hidden_field_tag 'respuesta' %>
              <%= hidden_field_tag 'n_preg', 5 %>
          <% end %>
        </div>
      </div>
      <div id="shadowlight">
      	<span class="shadow"></span>
          <div class="box_alert">
          	<span class="close"></span>
          </div>
      </div>
    </div>
    
    <div id="footer">
    </div>
</div>