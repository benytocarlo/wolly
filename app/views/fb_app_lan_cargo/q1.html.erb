<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
<script>
$(function(){
    $(".q1-granja").draggable({ revert: true });
    $(".choice").droppable({
         accept: ".q1-granja",
         drop: function(event, ui ) {
             $(".choice").removeClass("choice_ON");
             $(this).addClass("choice_ON");
             $("#respuesta").val( $(this).attr("rel") );
             $("#btn_enviar").fadeIn();
             $(".confirmar").fadeIn();
        }
    });
    $("#btn_enviar").click(function(){
        if( $("#respuesta").val() != "" ){
            clearInterval(countdown);
            $("#registro").submit();
        }else{
            $(".alerta_vacio").fadeIn(function(){
                $(this).delay(3000).fadeOut();
            }); 
        }
    });

     var countdown = setInterval(function() {
        var timeCounter = $("span[class=tiempo_numero]").html();
        var updateTime = eval(timeCounter)- eval(1);
        $("span[class=tiempo_numero]").html(updateTime);

        if(updateTime == 0){
           $("span[class=tiempo_numero]").html("--");
           location.href = '<%= fb_app_lan_cargo_nulas_path %>?sgte_preg=q2';
        }
    }, 1000);
})
</script>
<div class="content">
    <div id="header">
        <div class="main_nav">
            <span class="main_logo"></span>
            <ul>
                <li><a href="<%= fb_app_lan_cargo_path %>" class="img_quiz">Quiz Imposible</a></li>
                <li><a href="<%= fb_app_lan_cargo_premios_path %>" class="img_premios">Premios</a></li>
                <li><a href="/documents/fb_app_lan_cargo.pdf" target="_blank" class="img_bases">Bases</a></li>
            </ul>
        </div>
        <div class="game_nav">
            <div class="pager">1/7</div>
            <div class="question"><%=image_tag("fb_app_lan_cargo/queston_1.png")%></div>
            <div class="tiempo">Tiempo<span class="tiempo_numero">10</span></div>
        </div>
    </div>
    
    <div class="content">
        <div class="q1 pregunta">
        
          <div class="answers">
            <%=image_tag("fb_app_lan_cargo/q1_icon.png", :class => "q1-granja", :alt => "Question")%>
          </div> <!-- / .questions -->
          
          <div class="choices">
            <div id="choice-1" class="choice mexico" rel="1:i"></div> <!-- / .choice -->
            <div id="choice-2" class="choice panama" rel="1:c"></div> <!-- / .choice -->
            <div id="choice-3" class="choice colombia" rel="1:i"></div> <!-- / .choice -->
            <div id="choice-4" class="choice peru" rel="1:i"></div> <!-- / .choice -->
            <%= form_tag(fb_app_lan_cargo_respuestas_path,:id=>:registro, :method => "post") do  %>
                <%= hidden_field_tag 'respuesta' %>
                <%= hidden_field_tag 'n_preg', 1 %>
            <% end %>
          </div>
            <%=image_tag("fb_app_lan_cargo/debes_responder_mensaje.png", :class => "alerta_vacio", :alt => "Question")%>
            <%= link_to "Continuar", "#", :id => 'btn_enviar' , :class => 'next_question' %>
            <%=image_tag("fb_app_lan_cargo/confirmar.png", :class => "confirmar", :alt => "Question")%>
        </div>
    </div>
    <div id="footer">
        <a href="javascript:void(0);" target="_blank" class="link_natgeo">NatGeoCh</a>
        <a href="javascript:void(0);" target="_blank" class="tw_cargas">#CargasImposibles</a>
        <a href="javascript:void(0);" target="_blank" class="tw_lovi">#LoViEnNatGeo</a>
        <a href="http://www.lancargo.com/es/" target="_blank"><span class="logo_cargo"></span></a>
    </div>
</div>