<script type="text/javascript">
  $(document).ready(function(){
    $('.instructions').click( function (){
      $('.instrucciones').fadeIn('fast');
    });
    
    $('.cerrar').click( function (){
      $('.instrucciones').fadeOut('fast');
    });

    $('.boton_est').click( function(){
      $('.boton_est').removeClass('boton_ON');
      $(this).toggleClass('boton_ON');
      $("#estrategia").val($(this).attr("rel"));
      $("#tipo_estrategia").val("mod_"+$(this).attr('class').split(' ')[0]);
    });

    $("#btn_enviar").click(function(){
      if ( $("#estrategia").val() == "" ) {
        alert("seleccione una opcion");
      }else{
        $("#registro").submit();
      }
    });
  });
</script>
    <div class="background estrategia">
      <div class="left defensa">
        <div class="d_451 boton_est" rel="defensa"></div>
        <div class="d_352 boton_est" rel="defensa"></div>
        <div class="d_343 boton_est" rel="defensa"></div>
      </div>
      <div class="right ataque">
        <div class="a_433 boton_est" rel="ataque"></div>
        <div class="a_235 boton_est" rel="ataque"></div>
        <div class="a_325 boton_est" rel="ataque"></div>
      </div>
      <%= link_to "Enviar estrategia", "#", :id => 'btn_enviar', :class => 'enviar_estraegia'  %>
      <a href="#" class="instructions">Instrucciones</a>
    </div>
    <div class="instrucciones" <%= @esconder %>>
      <span class="img" style="background-image:url(../assets/fb_app_hyundai_mundial/instrucciones_1.gif); background-repeat:no-repeat;"></span>
      <span class="cerrar">X</span>
    </div>
    <%= form_tag(fb_app_hyundai_mundial_redirect_estrategias_path,:id=>:registro, :method => "post") do  %>
      <%= hidden_field_tag 'estrategia' %>
      <%= hidden_field_tag 'tipo_estrategia' %>
    <% end %>